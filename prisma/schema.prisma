datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Question {
    id String @default(uuid()) @id @db.Uuid
    label String

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    predefinedAnswers PredefinedAnswer[]

    @@map(name: "questions")
}

model PredefinedAnswer {
    id Int @default(autoincrement()) @id
    label String
    questionId String @map("question_id") @db.Uuid

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    question Question @relation(fields: [questionId], references: [id])

    @@unique([questionId, label])
    @@map(name: "predefined_answers")
}

model Vote {
    id Int @default(autoincrement()) @id
    predefinedAnswerId Int @map("predefined_answer_id")

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    predefinedAnswer PredefinedAnswer @relation(fields: [predefinedAnswerId], references: [id])

    @@map(name: "votes")
}
